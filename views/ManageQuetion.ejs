<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <title>Manage Quetion List</title>
    <script>
      var token = document
        .querySelector('meta[name="csrf-token"]')
        .getAttribute("content");

      function deleteQuetion(id) {
        fetch(`/delete/Quetion/${id}`, {
          method: "DELETE",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            _csrf: token,
          }),
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload();
            }
          })
          .catch((err) => console.log(err));
      }
    </script>
  </head>
  <body>
    <div class="grid justify-center my-4">
      <% if(messages && messages.error && messages.error.length != 0) { %>
        <div
          class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative text-center mb-3"
          role="alert"
        >
          <strong> <%=messages.error %> </strong>
        </div>
        <% } %> <% if(messages && messages.success && messages.success.length !=
        0) { %>
        <div
          class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative text-center mb-3"
          role="alert"
        >
          <strong> <%=messages.success %> </strong>
        </div>
        <% } %> 
      <%-include ("header.ejs") %>
      <div class="text-2xl text-center font-medium mb-3">
        Election Title : <%= electionList.Title %>
      </div>
      <div>
        <span class="text-xl font-medium">Add Quetion</span>
        <form action="/addQuetion/<%= electionList.id %>" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken%>" />
          <span class="text-xl block my-4">Quetion Name/Title:</span>
          <input
            type="text"
            name="QuetionTitle"
            class="rounded border border-black outline-none p-3 w-2/4"
            placeholder="Enter Quetion Name"
          />
          <span class="text-xl block my-4">Quetion Description:</span>
          <textarea
            name="Description"
            placeholder="Enter Quetion Description"
            class="p-3 border border-black rounded resize-none"
            cols="40"
            rows="3"
          ></textarea>
          <input
            type="submit"
            value="Add"
            class="my-4 text-xl rounded bg-green-700 font-medium p-1 outline-none text-white w-20 h-12 cursor-pointer block"
          />
        </form>
      </div>
      <span class="text-2xl font-medium"
        >You Have <%=QuetionList.length%> Previous Quetion:</span
      >
      <div class="mt-5">
        <% for( let i = 0; i < QuetionList.length ; i++ ) { %>
        <div class="flex-wrap mt-5">
          <div class="inline-blcok">
            <span class="inline-blcok text-xl">
              <%= QuetionList[i].QuetionTitle %>
            </span>
            <a
              onclick="deleteQuetion(<%=QuetionList[i].id%>)"
              class="ml-3 bg-red-500 text-xl rounded font-medium p-2 outline-none text-white w-56 h-12 relative text-center my-3 cursor-pointer"
              >Delete Quetion</a
            >
            <a
              href="/editQuetion/<%=QuetionList[i].id%>"
              class="ml-3 bg-emerald-500 text-xl rounded font-medium p-2 outline-none text-white w-56 h-12 relative text-center my-3 cursor-pointer"
              >Edit Quetion</a
            >
            <a
            href="/ManageOption/<%=QuetionList[i].id%>/election/<%=electionList.id%>"
            class="ml-3 text-xl rounded bg-green-700 font-medium p-2 outline-none text-white w-56 h-12 relative text-center cursor-pointer"
            >Manage Option</a
          >
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
