<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Quetion</title>
  </head>
  <body>
    <%-include ("./header.ejs")%>
    <div class="mt-5">
      <%-include ("./notification.ejs")%>
      <div>
        <form action="/editQuetion/<%=QuetionDetail.id%>" method="post">
          <input type="hidden" name="_csrf" value="<%= csrfToken%>" />
          <span class="text-xl block my-4">Quetion Name/Title:</span>
          <input
            type="text"
            name="QuetionTitle"
            class="rounded border border-black outline-none p-3 w-2/4"
            placeholder="Enter New Quetion Title"
            required
          />
          <span class="text-xl block my-4">Quetion Description:</span>
          <textarea
            name="Description"
            placeholder="Enter New Quetion Description"
            class="p-3 border border-black rounded resize-none"
            cols="40"
            rows="3"
            required
          ></textarea>
          <input
            type="submit"
            value="Update"
            class="my-4 text-xl rounded bg-green-700 font-medium p-1 outline-none text-white w-20 h-12 cursor-pointer block"
          />
        </form>
      </div>
    </div>
    <script>
      function goback() {
        let btnGoBack = (document.getElementById("goBack").href =
          "/ManageQuetion/<%=QuetionDetail.ElectionId%>");
      }
    </script>
  </body>
</html>
